<div class="task-input">
  <%= form_for Task.new do |f| %>
    <%= f.text_field :name %>
  <% end %>
</div>

<% @tasks.each do |task| %>
<div class="task-card">
  <div class="task-status">
    <%= form_for task do |f| %>
      <%= f.check_box :done %>
    <% end %>
  </div>
  <div class="task-name"><h3><%= task.name %></h3></div>
</div>
<% end %>